<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_back_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Повернутись в профіль"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="#6C6C6C"
            android:backgroundTint="#DDDDDD"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/change_pass_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_back_card">
        <TextView
            android:id="@+id/main_text"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Зміна пароля"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="23dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/change_pass_title"
        app:layout_constraintRight_toRightOf="@+id/change_pass_title"
        app:layout_constraintTop_toBottomOf="@+id/change_pass_title"
        android:layout_margin="40dp">


        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введіть пароль"
            android:inputType="numberPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/confirmed_edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Повторіть пароль"
            android:inputType="numberPassword"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/edtPassword"
            app:layout_constraintLeft_toLeftOf="@id/edtPassword"
            app:layout_constraintRight_toRightOf="@id/edtPassword"/>


        <Button
            android:id="@+id/save_btn"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/confirmed_edtPassword"
            app:layout_constraintLeft_toLeftOf="@id/confirmed_edtPassword"
            app:layout_constraintRight_toRightOf="@id/confirmed_edtPassword"
            android:text="Зберегти"
            android:textStyle="bold"
            android:textColor="#6C6C6C"
            android:backgroundTint="#DDDDDD"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>